<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PassageiroFragment">

    <include
        android:id="@+id/include"
        layout="@layout/content_maps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cardDestinoPassageiro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDestinoPassageiro"
        android:layout_width="0dp"
        android:layout_height="230dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnBuscarMotorista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_button_roxo"
        android:text="Continuar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/cardDestinoPassageiro"
        app:layout_constraintEnd_toEndOf="@+id/cardDestinoPassageiro"
        app:layout_constraintStart_toStartOf="@+id/cardDestinoPassageiro"
        app:layout_constraintTop_toBottomOf="@+id/editLocalDestino" />

    <EditText
        android:id="@+id/editLocalDestino"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_edit_text"
        android:elevation="3dp"
        android:ems="10"
        android:hint="Local de destino..."
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/cardDestinoPassageiro"
        app:layout_constraintStart_toStartOf="@+id/cardDestinoPassageiro"
        app:layout_constraintTop_toBottomOf="@+id/editLocalPassageiro" />

    <EditText
        android:id="@+id/editLocalPassageiro"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_edit_text"
        android:elevation="3dp"
        android:ems="10"
        android:hint="Meu local..."
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/cardDestinoPassageiro"
        app:layout_constraintStart_toStartOf="@+id/cardDestinoPassageiro"
        app:layout_constraintTop_toTopOf="@+id/cardDestinoPassageiro" />

</androidx.constraintlayout.widget.ConstraintLayout>